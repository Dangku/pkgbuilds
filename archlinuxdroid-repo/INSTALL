enable_repo() {
  line=$(grep -n "\[archlinuxdroid\]" /etc/pacman.conf | cut -d: -f1)

  if [ "$line" == "" ]; then
    echo "" >> /etc/pacman.conf
    echo "[archlinuxdroid]" >> /etc/pacman.conf
    echo "SigLevel = Optional TrustedOnly" >> /etc/pacman.conf
    echo "Include = /etc/pacman.d/archdroid-mirrorlist" >> /etc/pacman.conf
  fi
}

disable_repo() {
  line=$(grep -n "\[archlinuxdroid\]" /etc/pacman.conf | cut -d: -f1)

  if [ "$line" != "" ]; then
    sed -i "$((line-1)),$((line+2))d" /etc/pacman.conf
  fi
}

post_install() {
  enable_repo
}

post_upgrade() {
  disable_repo
  enable_repo
}

post_remove() {
  disable_repo
}
